<%= form_for @post, url: { action: action }, html: {multipart: true} do |form| %>
	<div>
	<%= form.label :title %><br />
	<%= form.text_field :title %>
	</div>
	<div>
		<%= form.label :image, "Upload your image" %>
		<%= form.file_field :image %>
	</div>
	<div>
		<%= form.label :tag_list, "Tags (separated by commas)" %><br />
  	<%= form.text_field :tag_list %>
	</div>
	<div>
	<%= form.label :description %><br />
	<%= form.text_area :description, id: "summernote" %>
	</div>

	<div>
	<%= form.label :italiandescription, "Italian version" %><br />
	<%= form.text_area :italiandescription, id: "summernote-ita" %>
	</div>

<br>

	<div><%= form.submit "Submit" %></div>

<% end %>


<script>
	$(document).ready(function() {
	    $('#summernote, #summernote-ita').summernote({
	        height: "500px",
	        onImageUpload: function(files, editor, welEditable) {
	            sendFile(files[0],editor,welEditable);
	        }
	    });
	});
</script>
